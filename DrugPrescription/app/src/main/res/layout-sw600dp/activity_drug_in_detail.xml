<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white">


    <TextView
        android:id="@+id/drugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/twentyfive_textSize"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/drugRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drugName"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textSize="@dimen/twentyfive_textSize"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/manufacturedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drugName"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/fifteen_textSize"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/drugUsedFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manufacturedBy"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/eighteen_textSize"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/drugDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drugUsedFor"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/eighteen_textSize"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text=" OK "
        android:layout_below="@id/drugDescription"
        style="@style/buttonStyle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"/>

</RelativeLayout>
